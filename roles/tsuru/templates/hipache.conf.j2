{
    "server": {
        "accessLog": "/var/log/hipache/access.log",
        "port": {{hipache_port}},
        "workers": 10,
        "maxSockets": 100,
        "deadBackendTTL": 30,
        "tcpTimeout": 30,
        "retryOnError": 3,
        "deadBackendOn500": true,
        "httpKeepAlive": false,
        "https": {
            "port": {{hipache_sport}},
            "key": "/etc/pki/tls/private/hipache.key",
            "cert": "/etc/pki/tls/certs/hipache.crt"
        }
    },
    "driver": ["redis://127.0.0.1:6379"]
}

