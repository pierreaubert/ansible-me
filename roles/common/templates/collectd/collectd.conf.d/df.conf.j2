<Plugin df>
#	Device "/dev/sda1"
        Interval 600
#	Device "192.168.0.2:/mnt/nfs"
	MountPoint "/media/mirror1"
	MountPoint "/media/data1"
	MountPoint "/media/data2"
	MountPoint "/media/data3"
	MountPoint "/media/backup"
#	FSType "ext3"
#
#	# ignore rootfs; else, the root file-system would appear twice, causing
#	# one of the updates to fail and spam the log
	FSType rootfs
#	# ignore the usual virtual / temporary file-systems
	FSType sysfs
	FSType proc
	FSType devtmpfs
	FSType devpts
	FSType tmpfs
	FSType fusectl
	FSType cgroup
#	IgnoreSelected true
</Plugin>

